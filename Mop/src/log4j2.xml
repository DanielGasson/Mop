<?xml version="1.0" encoding="UTF-8"?>
<configuration status="INFO">
    <appenders>
        <File name="MopLogging" fileName="${sys:logFilePath}/Mop.log">
            <PatternLayout pattern="%d{yyyy MM dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n"/>
        </File>
    </appenders>

    <loggers>
        <root level="debug">
            <appender-ref ref="MopLogging" level="debug"/>
        </root>
    </loggers>
</configuration>